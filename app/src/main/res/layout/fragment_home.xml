<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:text="Collares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvCurrentCategory" android:textSize="18sp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/rcvTable" android:layout_weight="1"
                android:minHeight="400dp" android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>