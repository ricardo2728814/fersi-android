<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvName"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/ivImage" android:scaleType="centerCrop" android:tooltipText="Toque para ver más"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="end" android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp">
                <TextView
                        android:text="Costo:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_gravity="end"
                        android:layout_marginEnd="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvCost" android:textAlignment="textEnd"
                />
            </LinearLayout>
            <TextView
                    android:text="Descripción:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:paddingHorizontal="20dp"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvDescription" android:minHeight="100dp"
                    android:paddingHorizontal="20dp"/>
            <Button
                    android:text="Contactar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btContact" android:enabled="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>